- content_for :title do
  == title_for('Details for', @record)

- @action.fields.each do |field|
  - @record.send(field.name).tap do |value|
    - if value.present?
      div.card class=(show_field_class(field))
        div class="card-header" = field.label
        - if field.render_in_card_block?
          div.card-block == field.render(self, @record, locals.except(:dashboard))
        - else
          == field.render(self, @record, locals.except(:dashboard))
